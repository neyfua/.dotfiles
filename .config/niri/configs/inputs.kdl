input {
	keyboard {
		repeat-delay 200
		repeat-rate 40
		numlock
	}

	touchpad {
		tap
		dwt
		natural-scroll
		accel-speed 0.5
		accel-profile "flat"
		scroll-factor 0.4
		scroll-method "two-finger"
		// disabled-on-external-mouse
	}

	mouse {
		accel-speed -0.1
		accel-profile "flat"
	}

	// workspace-auto-back-and-forth
}
