# volume + brightness
bindsym XF86AudioRaiseVolume exec --no-startup-id sh -c 'pamixer --allow-boost --set-limit 150 -i 2 && vol=$(pamixer --get-volume) && notify-send -t 4000 -r 1001 -h string:x-canonical-private-synchronous:volume -i "/usr/share/icons/RoséPine-Moon/16x16/actions/audio-volume-high.svg" "Volume" "${vol}% | +2%"'
bindsym XF86AudioLowerVolume exec --no-startup-id sh -c 'pamixer --allow-boost --set-limit 150 -d 2 && vol=$(pamixer --get-volume) && notify-send -t 4000 -r 1001 -h string:x-canonical-private-synchronous:volume -i "/usr/share/icons/RoséPine-Moon/16x16/actions/audio-volume-low.svg" "Volume" "${vol}% | -2%"'
bindsym XF86AudioMute exec --no-startup-id sh -c 'pamixer -t && [ "$(pamixer --get-mute)" = "true" ] && notify-send -t 4000 -r 1001 -h string:x-canonical-private-synchronous:volume -i "/usr/share/icons/RoséPine-Moon/16x16/actions/audio-volume-muted.svg" "Volume" "Muted" || notify-send -t 4000 -r 1001 -h string:x-canonical-private-synchronous:volume -i "/usr/share/icons/RoséPine-Moon/16x16/actions/audio-volume-medium.svg" "Volume" "Unmuted"'
bindsym XF86MonBrightnessUp exec --no-startup-id sh -c 'brightnessctl set +5% && bright=$(brightnessctl get) && max=$(brightnessctl max) && pct=$((100 * bright / max)) && notify-send -t 4000 -r 1002 -h string:x-canonical-private-synchronous:brightness -i "/usr/share/icons/RoséPine-Moon/16x16/actions/brightnesssettings.svg" "Brightness" "${pct}% | +5%"'
bindsym XF86MonBrightnessDown exec --no-startup-id sh -c 'brightnessctl set 5%- && bright=$(brightnessctl get) && max=$(brightnessctl max) && pct=$((100 * bright / max)) && notify-send -t 4000 -r 1002 -h string:x-canonical-private-synchronous:brightness -i "/usr/share/icons/RoséPine-Moon/16x16/actions/lighttable.svg" "Brightness" "${pct}% | -5%"'

